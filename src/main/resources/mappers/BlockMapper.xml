<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.metavm.infra.persistence.BlockMapper">

  <resultMap id="BaseResultMap" type="tech.metavm.infra.persistence.BlockPO">
    <!--@mbg.generated-->
    <!--@Table id_block-->
    <id column="id" jdbcType="BIGINT" property="id"/>
    <result column="tenant_id" jdbcType="BIGINT" property="tenantId"/>
    <result column="type_id" jdbcType="BIGINT" property="typeId" />
    <result column="start" jdbcType="BIGINT" property="start" />
    <result column="end" jdbcType="BIGINT" property="end" />
    <result column="next" jdbcType="BIGINT" property="next" />
    <result column="active" jdbcType="BOOLEAN" property="active"/>
  </resultMap>

  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    id, tenant_id, type_id, `start`, `end`, `next`, `active`
  </sql>

  <select id="selectForUpdate" resultMap="BaseResultMap">
    <!--@mbg.generated-->
    select 
    <include refid="Base_Column_List" />
    from id_block
    where end = #{bulkNum} for update
  </select>

  <insert id="batchInsert">
    <!--@mbg.generated-->
    insert into id_block (id, tenant_id, type_id, `start`, `end`, `next`, `active`) values
    <foreach collection="collection" item="item" separator=",">
      (#{item.id}, #{item.tenantId}, #{item.typeId}, #{item.start}, #{item.end}, #{item.next}, #{item.active})
    </foreach>
  </insert>

  <update id="increaseNextId">
    update id_block set next = id_block.next + #{inc} where id = #{id}
  </update>

  <select id="selectActiveRanges" resultMap="BaseResultMap">
      select
        <include refid="Base_Column_List"/>
      from
          id_block
      where tenant_id = #{tenantId} and type_id in
    <foreach collection="typeIds" item="typeId" open="(" close=")" separator=",">
      #{typeId}
    </foreach>
    and active = true
  </select>

  <select id="selectByPoint" resultMap="BaseResultMap">
    select * from id_block
    where end > #{point}
    order by end limit 1
  </select>

  <update id="inc">
    <foreach collection="collection" item="item" separator=";">
      update
        id_block
      set
        next = next + #{item.inc}
      <if test="item.deactivating" >
        , active = false
      </if>
      where id = #{item.id}
    </foreach>
  </update>

  <select id="selectActive" resultMap="BaseResultMap">
    select
      <include refid="Base_Column_List"/>
    from
    id_block
    where active = true and
    type_id in
    <foreach collection="collection" item="item" open="(" close=")" separator=",">
      #{item}
    </foreach>
  </select>

  <update id="batchUpdate">
    <foreach collection="collection" item="item" separator=";">
      update id_block
      <set>
        <if test="item.next != null">
          `next` = #{item.next},
        </if>
        <if test="item.active != null ">
          `active` = #{item.active},
        </if>
      </set>
      where id = #{item.id}
    </foreach>
  </update>

  <select id="selectByIds" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from
    id_block
    where id in
    <foreach collection="collection" item="item" open="(" close=")" separator=",">
      #{item}
    </foreach>
  </select>
</mapper>