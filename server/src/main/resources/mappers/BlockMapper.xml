<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.metavm.system.persistence.BlockMapper">

  <resultMap id="BaseResultMap" type="org.metavm.system.persistence.BlockPO">
    <!--@mbg.generated-->
    <!--@Table id_block-->
    <id column="id" jdbcType="BIGINT" property="id"/>
    <result column="app_id" jdbcType="BIGINT" property="appId"/>
    <result column="type_tag" jdbcType="SMALLINT" property="typeTag" />
    <result column="type_id" jdbcType="BIGINT" property="typeId" />
    <result column="start_id" jdbcType="BIGINT" property="startId" />
    <result column="end_id" jdbcType="BIGINT" property="endId" />
    <result column="next_id" jdbcType="BIGINT" property="nextId" />
    <result column="is_active" jdbcType="BOOLEAN" property="active"/>
  </resultMap>

  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    id, app_id, type_tag, type_id, start_id, end_id, next_id, is_active
  </sql>

  <insert id="batchInsert">
    <!--@mbg.generated-->
    insert into id_block (id, app_id, type_tag, type_id, start_id, end_id, next_id, is_active) values
    <foreach collection="collection" item="item" separator=",">
        (#{item.id}, #{item.appId}, #{item.typeTag}, #{item.typeId}, #{item.startId}, #{item.endId}, #{item.nextId},
        #{item.active})
    </foreach>
  </insert>

  <update id="increaseNextId">
    update id_block set next_id = id_block.next_id + #{inc} where id = #{id}
  </update>

  <select id="selectActiveRanges" resultMap="BaseResultMap">
      select
        <include refid="Base_Column_List"/>
    from
    id_block
    where app_id = #{appId} and type_id in
    <foreach collection="typeIds" item="typeId" open="(" close=")" separator=",">
      #{typeId}
    </foreach>
    and is_active = true
  </select>

  <select id="selectContaining" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/> from id_block
    where end_id > #{point}
    order by end_id limit 1
  </select>

  <update id="inc">
    <foreach collection="collection" item="item" separator=";">
      update
        id_block
      set
        next_id = next_id + #{item.inc}
      <if test="item.deactivating" >
        , is_active = false
      </if>
      where id = #{item.id}
    </foreach>
  </update>

  <select id="selectActive" resultMap="BaseResultMap">
    select
      <include refid="Base_Column_List"/>
    from
    id_block
    where is_active = true and
    type_id in
    <foreach collection="collection" item="item" open="(" close=")" separator=",">
      #{item}
    </foreach>
    for update
  </select>

  <update id="batchUpdate">
    <foreach collection="collection" item="item" separator=";">
      update id_block
      <set>
        <if test="item.nextId != null">
          next_id = #{item.nextId},
        </if>
        <if test="item.active != null ">
          is_active = #{item.active},
        </if>
      </set>
        where id = #{item.id}
    </foreach>
  </update>

  <select id="selectByIds" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from
    id_block
    where id in
    <foreach collection="collection" item="item" open="(" close=")" separator=",">
      #{item}
    </foreach>
  </select>
</mapper>