<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.h2.Driver"/>
                <property name="url" value="jdbc:h2:mem:myDb"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mappers/InstanceMapper.xml"/>
        <mapper resource="mappers/IndexEntryMapper.xml"/>
        <mapper resource="mappers/BlockMapper.xml"/>
        <mapper resource="mappers/RegionMapper.xml"/>
        <mapper resource="mappers/ReferenceMapper.xml"/>
    </mappers>

</configuration>