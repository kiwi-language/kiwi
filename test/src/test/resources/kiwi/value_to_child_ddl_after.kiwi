class Product(
    priv var name: string,
    priv var price: Price
) {

    fn getName() -> string {
        return this.name
    }

    fn setName(name: string) {
        this.name = name
    }

    fn getPrice() -> Price {
        return this.price
    }

    fn setPrice(price: Price) {
        this.price = price
    }
}

class Price(
    priv var amount: double,
    priv var currency: Currency
) {

    fn getAmount() -> double {
        return this.amount
    }

    fn setAmount(amount: double) {
        this.amount = amount
    }

    fn getCurrency() -> Currency {
        return this.currency
    }

    fn setCurrency(currency: Currency) {
        this.currency = currency
    }

}

enum Currency {
    YUAN,
    DOLLAR,
    POUND

;

}