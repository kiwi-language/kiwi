
class LivingBeing(
    var age: int,
    var extra: any?
) {

    var offsprings: LivingBeing[] = new LivingBeing[]
    var ancestors: LivingBeing[] = new LivingBeing[]

    fn addOffspring(offspring: LivingBeing) {
        this.offsprings.append(offspring)
    }

    fn addAncestor(ancestor: LivingBeing) {
        this.ancestors.append(ancestor)
    }

    fn makeSound() -> string {
        return "Gu gu gu gu"
    }

}

class Animal(
    age: int,
    extra: any|null,
    var intelligence: int
): LivingBeing(age, extra) {

    fn makeSound() -> string {
        return "Howl~"
    }

}

class Human(
    age: int,
    extra: any|null,
    intelligence: int,
    var occupation: string
): Animal(age, extra, intelligence), Sentient {

   var thinking = false

   fn makeSound() -> string {
        return "I am a human being"
   }

   fn think() {
        this.thinking = true
   }

}

interface Sentient {

    fn think()

}