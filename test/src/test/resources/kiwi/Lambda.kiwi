
class Utils {

    static fn findGt(list: int[], value: int) -> int? {
        return Utils.find<int>(list, getGtOperator(value))
    }

    static fn getGtOperator(value: int) -> (int) -> bool {
        return v -> v > value
    }

    static fn find<T>(array: T[], test: (T) -> bool) ->  T? {
        for (next in array) {
            if (test(next)) {
                return next
            }
        }
        return null
    }

}